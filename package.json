{
  "name": "typescript-action",
  "version": "0.1.2",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --silent",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm run test",
    "all-no-test": "npm run build && npm run format && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jupiterbak/ayx-test-reporter.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Jupiter Bakakeu <jupiter.bakakeu@alteryx.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@jupiterbak/ayx-node": "^0.1.1-2.3",
    "tryer": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.19.31",
    "@types/tryer": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.2",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^27.5.1",
    "js-yaml": "^4.1.0",
    "prettier": "3.2.5",
    "ts-jest": "^27.1.5",
    "typescript": "^4.9.5"
  }
}
